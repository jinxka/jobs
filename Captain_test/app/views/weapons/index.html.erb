<p id="notice"><%= notice %></p>

<h1>Weapons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dexterity</th>
      <th>Strength</th>
      <th>Intelligence</th>
      <th>Damage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.name %></td>
        <td><%= weapon.dexterity %></td>
        <td><%= weapon.strength %></td>
        <td><%= weapon.intelligence %></td>
        <td><%= weapon.damage %></td>
        <td><%= link_to 'Show', weapon %></td>
        <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
        <td><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h4><%= link_to 'Accueil', root_path %>   <%= link_to 'New Weapon', new_weapon_path %></h4>

<h4><%= link_to 'New Match', new_match_path %>   <%= link_to 'Arena History', matches_path %></h4>

