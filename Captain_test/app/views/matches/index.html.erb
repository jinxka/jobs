<p id="notice"><%= notice %></p>

<h1>Arena History</h1>

<table>
  <thead>
    <tr>
      <th>Fighter1</th>
      <th>Fighter2</th>
      <th>Winner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.first_fighter %></td>
        <td><%= match.second_fighter %></td>
        <td><%= match.winner %></td>
        <td><%= link_to 'Show', match %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4><%= link_to 'Accueil', root_path %>   <%= link_to 'New Match', new_match_path %></h4>

<h4><%= link_to 'New Fighter', new_fighter_path %>   <%= link_to 'Fighters List', fighters_path %></h4>

<h4><%= link_to 'New Weapon', new_weapon_path %>   <%= link_to 'Weapons List', weapons_path %></h4>
