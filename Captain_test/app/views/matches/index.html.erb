<p id="notice"><%= notice %></p>

<h1>Arena</h1>

<table>
  <thead>
    <tr>
      <th>Fighter1</th>
      <th>Fighter2</th>
      <th>Winner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.fighter1 %></td>
        <td><%= match.fighter2 %></td>
        <td><%= match.winner %></td>
        <td><%= link_to 'Show', match %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Accueil', root_path %> <%= link_to 'New Match', new_match_path %>
